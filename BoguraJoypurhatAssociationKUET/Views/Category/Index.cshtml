@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Students' List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
			</a>
		</div>
	</div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">

    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Roll
            </th>
            <th>
                Department
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="40%">
                    @obj.Name
                </td>
                <td width="20%">
                    @obj.Roll
                </td>
                <td width="20%">
                    @obj.Dept
                </td>
                 <td width="10%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2"> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
					</div>
				</td>
            </tr>
        }
    </tbody>
</table>